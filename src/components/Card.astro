---
import {clsx} from "clsx";
interface Props extends HTMLAttributes<'div'> {
  darkMode?: boolean;
  variant?: 'glass' | 'lightGlass' | 'quartz';
  shadow?: boolean;
  borderless?: boolean;
}
import "../styles/components.scss";
import {type HTMLAttributes} from "astro/types";

const {
  darkMode = false,
  variant = 'quartz',
  shadow = true,
  borderless = false,
  ...props
} = Astro.props;
---

<div
    class={
        clsx(
            props.class,
            'card',
            darkMode && 'dark-mode',
            variant==='glass' && 'glass',
            variant==='lightGlass' && 'light-glass',
            shadow || 'no-shadow',
            borderless && 'borderless'
        )
    }
    {...props}
>
  <slot />
</div>